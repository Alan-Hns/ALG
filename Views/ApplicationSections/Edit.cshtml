@model CrudSecApp.Models.ApplicationSection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar sección</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <input asp-for="Section" class="form-control" />
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationModuleId" class="control-label"></label>
                <select asp-for="ApplicationModuleId" class="form-control" asp-items="ViewBag.ApplicationModuleId"></select>
                <span asp-validation-for="ApplicationModuleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTransaccion" class="control-label"></label>
                <input asp-for="TipoTransaccion" class="form-control" />
                <span asp-validation-for="TipoTransaccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionTransaccion" class="control-label"></label>
                <input asp-for="DescripcionTransaccion" class="form-control" />
                <span asp-validation-for="DescripcionTransaccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModificadoPor" class="control-label"></label>
                <input asp-for="ModificadoPor" class="form-control" />
                <span asp-validation-for="ModificadoPor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconName" class="control-label"></label>
                <input asp-for="IconName" class="form-control" />
                <span asp-validation-for="IconName" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
