@model CrudSecApp.Models.ApplicationUser

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <section class="vh-100" style="background-color: #f4f4f2;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <form asp-controller="Login" asp-action="Login" method="post">
                            <div class="card-body p-5 text-center">
                                <h3 class="mb-5">Login</h3>

                                <div class="form-outline mb-4">
                                    <input type="text" class="form-control form-control-lg" asp-for="UserName" />
                                    <label class="form-label" for="typeEmailX-2">UserName</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" />
                                    <label class="form-label" for="typePasswordX-2">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Ingresar</button>
                                
                                <hr class="my-4">

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
